    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "22.7.5",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@types/ua-parser-js": "^0.7.39",
    "autoprefixer": "^10.4.20",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.5",
    "cz-customizable": "^7.0.0",
    "husky": "^8.0.0",
    "lint-staged": "15.2.10",
    "postcss": "^8.4.47",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "sharp": "^0.33.5",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "pnpm format",
      "git add ."
    ],
    "*.ts?(x)": [
      "pnpm format",
      "git add ."
    ]
  },
  "browserslist": [
    "chrome 64",
    "edge 79",
    "firefox 67",
    "opera 51",
    "safari 12"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
