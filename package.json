{
  "name": "forum",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=16.14.1"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build --no-lint",
    "build-static": "next build",
    "start": "next start",
    "lint": "next lint",
    "commit": "cz",
    "clean": "rimraf node_modules",
    "windows-clean": "del node_modules",
    "format": "prettier --write  src/**/*.{scss,tsx,ts}",
