    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^11.11.9",
    "gsap": "^3.12.5",
    "lenis": "^1.1.14",
    "lucide-react": "^0.453.0",
    "next": "15.0.1",
    "next-auth": "^4.24.8",
    "next-intl": "^3.21.1",
    "next-themes": "^0.3.0",
    "pixi.js": "^8.5.1",
    "prisma": "^5.21.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hotkeys-hook": "^4.5.1",
    "react-query": "^3.39.2",
