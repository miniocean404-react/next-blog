// 一个用户可以有多个不同的账户绑定 Github、Google 等
model Account {
  id                       BigInt  @id @default(autoincrement())
  // numberId          Int  @id @default(autoincrement())
  userId                   String  @db.VarChar(64)
  // 登录认证的类型 oauth、jwt
  type                     String  @db.VarChar(32)
  // 是来自哪里提供的登录 github、google 等
  provider                 String  @db.VarChar(32)
  providerAccountId        String  @db.VarChar(32)
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  // token 类型 bearer
  token_type               String? @db.VarChar(32)
  // 功能范围
  scope                    String? @db.VarChar(32)
  id_token                 String? @db.Text
  session_state            String? @db.VarChar(32)
  refresh_token_expires_in Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}
