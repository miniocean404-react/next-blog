model Permission {
  id                 BigInt   @id @default(autoincrement())
  parent_id          BigInt?
  // 资源名称
  resource_name      String?  @db.VarChar(40)
  // 资源标识
  resource_key       String?  @db.VarChar(100)
  // 资源类型 1、模块 2、菜单 3、按钮 4、链接
  resource_type      String?  @db.Char(1)
  // 资源图标
  resource_icon      String?  @db.VarChar(255)
  // 资源路径
  resource_path      String?  @db.VarChar(255)
  // 资料链接
  resource_url       String?  @db.VarChar(255)
  // 资源级别
  resource_level     Int?
  // 是否显示
  resource_show      Boolean?
  // 是否缓存
  resource_cache     Boolean?
  // 资源页面名称
  resource_page_name String?  @db.VarChar(32)
  // '1有效，0禁用'
  resource_status    Int?     @default(1) @db.TinyInt
  comments           String?  @db.VarChar(255)
  // '备注'
  creator            BigInt?
  operator           BigInt?
  del_flag           Int      @default(0) @db.TinyInt

  createdAt DateTime @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.Timestamp(0)

  @@index([resource_name])
  @@index([parent_id])
  @@map("permission")
}

model RolePermission {
  id            BigInt  @id @default(autoincrement())
  role_id       BigInt
  permission_id BigInt
  creator       BigInt?
  operator      BigInt?
  del_flag      Int     @default(0) @db.TinyInt

  createdAt DateTime @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.Timestamp(0)

  @@map("role_permission")
}
